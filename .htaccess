# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /
RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]
</IfModule>

# END WordPress
RewriteEngine On
RewriteCond %{HTTP_HOST} ^www.miledian\.ru$ [NC]
RewriteRule ^(.*)$ http://miledian.ru/$1 [R=301,L]

<Files wp-config.php>
order allow,deny
deny from all
</Files>

